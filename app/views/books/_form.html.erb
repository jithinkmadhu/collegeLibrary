    <%= form.text_field :author_name, class:"form-control", placeholder:"Name of the Author" %>
  </div>
  <div class="mb-3">
    <%= form.text_area :short_desc, class:"form-control", :rows=>"3", placeholder:"Give a short description about the book." %>
  </div>
  <div class="mb-3">
    <%= form.text_area :long_desc, class:"form-control", :rows=>"4", placeholder:"Give a long description about the book." %>
  </div>
  <div>
    <%= form.submit "Add Book", class:"btn btn-primary" %>
  </div>
<% end %>
