<p style="color: green"><%= notice %></p>

<h1>Students</h1>
<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Book assigned</th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
          <td>
            <b><%= student.name %></b>
          </td>
          <td>
            <%= student.address_line_1 %>, <%= student.address_line_2 %><br/>
            <%= student.city %>, <%= student.state %>, PIN: <%= student.zip %><br/>
            <%= student.country %>
          </td>
          <td>
            <%= link_to "Show this student", student %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New student", new_student_path %>
